<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_small"
    android:background="@color/white"
    android:layout_margin="@dimen/margin_small"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_custompopup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_xlarge"
                android:gravity="center"
                android:text="Confirm Booking"
                />

            <View
                android:id="@+id/view_custom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/txt_custompopup_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/margin_xlarge"
                android:text="Message"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_xxxxlarge"
                android:gravity="right|center"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_marginRight="@dimen/margin_xxxxlarge"
                android:layout_marginBottom="@dimen/margin_xxlarge"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_custompopup_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:text="Cancel"
                    android:layout_weight="0.30"
                    android:textColor="@color/wallet_orange"

                    android:layout_marginRight="@dimen/margin_xlarge"
                    />


                <TextView
                    android:id="@+id/txt_custompopup_ok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.70"
                    android:gravity="center"
                    android:text="Proceed"
                    android:textColor="@color/wallet_orange"
                    />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
